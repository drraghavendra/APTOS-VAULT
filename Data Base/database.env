# PostgreSQL Configuration
POSTGRES_DB=aptos_vaults
POSTGRES_USER=aptos_vaults_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_ROOT_PASSWORD=super_secure_root_password

# Database Connection
PGHOST=localhost
PGPORT=5432
PGDATABASE=aptos_vaults
PGUSER=aptos_vaults_user
PGPASSWORD=secure_password_123

# PostgreSQL Performance Settings
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=768MB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_CHECKPOINT_COMPLETION_TARGET=0.9
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_DEFAULT_STATISTICS_TARGET=100
POSTGRES_RANDOM_PAGE_COST=1.1
POSTGRES_EFFECTIVE_IO_CONCURRENCY=200
POSTGRES_WORK_MEM=4MB
POSTGRES_MAX_WORKER_PROCESSES=8
POSTGRES_MAX_PARALLEL_WORKERS=4
POSTGRES_MAX_PARALLEL_WORKERS_PER_GATHER=2

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/backups

# Monitoring
PGADMIN_DEFAULT_EMAIL=admin@aptosvaults.com
PGADMIN_DEFAULT_PASSWORD=admin_password_123

# SSL Configuration
POSTGRES_SSL_MODE=prefer
POSTGRES_SSL_CERT=/ssl/server.crt
POSTGRES_SSL_KEY=/ssl/server.key
POSTGRES_SSL_CA=/ssl/ca.crt

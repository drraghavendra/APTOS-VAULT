{
  "name": "aptos-vaults-backend",
  "version": "1.0.0",
  "description": "Backend API for Aptos Vaults - Decentralized Structured Product Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "migration:generate": "db-migrate create --config database.json --migrations-dir src/migrations",
    "migration:up": "db-migrate up --config database.json --migrations-dir src/migrations",
    "migration:down": "db-migrate down --config database.json --migrations-dir src/migrations"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "aptos": "^1.8.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "axios": "^1.5.0",
    "nodemailer": "^6.9.4",
    "node-cron": "^3.0.2",
    "uuid": "^9.0.0",
    "http-status-codes": "^2.2.0",
    "date-fns": "^2.30.0",
    "lodash": "^4.17.21",
    "swagger-ui-express": "^4.6.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.197",
    "@types/node-cron": "^3.0.8",
    "@types/nodemailer": "^6.4.10",
    "@types/jest": "^29.5.4",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "db-migrate": "^1.0.0-beta.21",
    "db-migrate-pg": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "aptos",
    "blockchain",
    "defi",
    "vaults",
    "yield",
    "staking",
    "move",
    "postgresql"
  ],
  "author": "Aptos Vaults Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptosvaults/backend.git"
  },
  "bugs": {
    "url": "https://github.com/aptosvaults/backend/issues"
  },
  "homepage": "https://aptosvaults.com"
}
